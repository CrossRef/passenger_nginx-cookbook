server {
  listen 80 <%= @default_server ? "default_server" : "" %>;
  server_name <%= [ "#{@application}.#{node['domain']}", node['fqdn'] ].join(" ") %>;
  root <%= @root %>;
  access_log <%= node['nginx']['log_dir'] %>/<%= @application %>.access.log;
  passenger_enabled on;
  passenger_app_env <%= @rails_env %>;
}
